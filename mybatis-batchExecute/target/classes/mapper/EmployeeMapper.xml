    </where>
  </sql>

  <sql id="Base_Column_List">
    id, last_name, gender, email, dept_id
  </sql>

<!--  按条件查询-->
  <select id="selectByExample" parameterType="com.zy.mybatis.bean.EmployeeExample" resultMap="BaseResultMap">
    select
    <if test="distinct">
      distinct
    </if>
    <include refid="Base_Column_List" />
    from tbl_employee
    <if test="_parameter != null">
      <include refid="Example_Where_Clause" />
    </if>
    <if test="orderByClause != null">
      order by ${orderByClause}
    </if>
  </select>

  <select id="selectByPrimaryKey" resultType="com.zy.mybatis.bean.Employee">
    select * from tbl_employee where id=#{id};
  </select>

  <delete id="deleteByExample" parameterType="com.zy.mybatis.bean.EmployeeExample">
    delete from tbl_employee
    <if test="_parameter != null">
